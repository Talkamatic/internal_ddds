<?xml version="1.0" encoding="utf-8"?>
<grammar>
    <action name="top">the start view</action>

    <question predicate="current_time">the current time</question>
    <question predicate="current_time" speaker="user">what time is it</question>

    <action name="set_time">
        <one-of>
            <item>set the time</item>
            <item>set the clock</item>
            <item>set the time to <slot predicate="hour_to_set"/> <slot predicate="minute_to_set"/></item>
        </one-of>
    </action>

    <action name="set_alarm">
        <one-of>
            <item>set the alarm</item>
            <item>set the alarm at <slot predicate="alarm_hour"/> <slot predicate="alarm_minute"/></item>
        </one-of>
    </action>

    <action name="remove_alarm">remove the alarm</action>
    <action name="turn_off_alarm">turn off the alarm</action>
    <action name="select_alarm">
        <one-of>
            <item>select alarm</item>
            <item>select <slot predicate="alarm_to_select"/> alarm</item>
        </one-of>
    </action>
    <action name="snooze">snooze</action>
    <action name="sync_to_internet">sync to internet</action>
    <action name="update_clock_software">update the clock software</action>

    <question predicate="hour_to_set" speaker="system">what hour</question>
    <question predicate="minute_to_set" speaker="system">what minute</question>
    <question predicate="alarm_hour" speaker="system">what hour</question>
    <question predicate="alarm_minute" speaker="system">what minute</question>
    <question predicate="alarm_to_select" speaker="system">which alarm</question>

    <report action="SetTime" status="ended">the time was set to <slot predicate="hour_to_set"/> <slot predicate="minute_to_set"/>.</report>
    <report action="SetAlarm" status="ended">the alarm was set.</report>
    <preconfirm action="RemoveAlarm">remove the alarm</preconfirm>
    <report action="RemoveAlarm" status="ended">the alarm was removed.</report>
    <report action="AlarmRings" status="started">beep beep! the time is <slot predicate="alarm_hour"/> <slot predicate="alarm_minute"/>.</report>
    <report action="Snooze" status="ended">snoozing for ten minutes.</report>
    <report action="Snooze" status="failed" reason="not_ringing">the alarm is not ringing.</report>
    <report action="TurnOffAlarm" status="started" source="dialogue">turning off the alarm.</report>
    <report action="SelectAlarm" status="ended"><slot predicate="alarm_to_select"/> alarm selected.</report>

    <validity name="HourValidity">cannot set the hour to <slot predicate="hour_to_set"/>.</validity>
    <validity name="MinuteValidity">cannot set the minute to <slot predicate="minute_to_set"/>.</validity>

    <individual name="work_alarm">work</individual>

    <title type="action" action="top">hello world</title>
    <title type="question" predicate="current_time">show the time</title>
</grammar>