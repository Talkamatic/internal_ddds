<?xml version="1.0" encoding="utf-8"?>
<grammar>
    <action name="top">huvudmenyn</action>

    <question predicate="current_time">vad klockan är</question>
    <question predicate="current_time" speaker="user">vad är klockan</question>

    <action name="set_time">
        <one-of>
            <item>
                <vp>
                    <infinitive>ställa</infinitive>
                    <imperative>ställ</imperative>
                    <ing-form>ställer</ing-form>
                    <object>klockan</object>
                </vp>
            </item>
            <item>ställa klockan på <slot predicate="hour_to_set"/> <slot predicate="minute_to_set"/></item>
            <item>ställ klockan på <slot predicate="hour_to_set"/> <slot predicate="minute_to_set"/></item>
            <item>sätt klockan på <slot predicate="hour_to_set"/> <slot predicate="minute_to_set"/></item>
        </one-of>
    </action>

    <action name="set_alarm">
        <one-of>
            <item>
                <vp>
                    <infinitive>ställa</infinitive>
                    <imperative>ställ</imperative>
                    <ing-form>ställer</ing-form>
                    <object>alarmet</object>
                </vp>
            </item>
            <item>sätt alarmet</item>
            <item>sätta alarmet</item>
            <item>ställa alarmet på <slot predicate="alarm_hour"/> <slot predicate="alarm_minute"/></item>
            <item>ställ alarmet på <slot predicate="alarm_hour"/> <slot predicate="alarm_minute"/></item>
            <item>sätta alarmet på <slot predicate="alarm_hour"/> <slot predicate="alarm_minute"/></item>
            <item>sätt alarmet på <slot predicate="alarm_hour"/> <slot predicate="alarm_minute"/></item>
        </one-of>
    </action>

    <action name="remove_alarm">ta bort alarmet</action>
    <action name="turn_off_alarm">stäng av alarmet</action>
    <action name="snooze">snooza</action>

    <question predicate="hour_to_set" speaker="system">vilken timme</question>
    <question predicate="minute_to_set" speaker="system">vilken minut</question>
    <question predicate="alarm_hour" speaker="system">vilken timme</question>
    <question predicate="alarm_minute" speaker="system">vilken minut</question>

    <report action="SetTime" status="ended">klockan är satt på <slot predicate="hour_to_set"/> <slot predicate="minute_to_set"/>.</report>
    <report action="SetAlarm" status="ended">alarmet är satt.</report>
    <preconfirm action="RemoveAlarm">ta bort alarmet</preconfirm>
    <report action="RemoveAlarm" status="ended">alarmet är borttaget.</report>
    <report action="Snooze" status="ended">snoozar i tio minuter.</report>
    <report action="Snooze" status="failed" reason="not_ringing">alarmet ringer inte.</report>
    <report action="TurnOffAlarm" status="started" source="dialogue">stänger av alarmet</report>

    <validity name="HourValidity"><slot predicate="hour_to_set"/> är inte en giltig timme.</validity>
    <validity name="MinuteValidity"><slot predicate="minute_to_set"/> är inte en giltig minut.</validity>

    <individual name="work_alarm">arbetsalarm</individual>
</grammar>