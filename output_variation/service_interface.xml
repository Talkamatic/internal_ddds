<?xml version="1.0" encoding="utf-8"?>
<service_interface>
  <action name="Call">
    <parameters>
      <parameter predicate="contact_to_call" format="value" optional="false"/>
      <parameter predicate="number_type_to_call" format="value" optional="false"/>
    </parameters>
    <failure_reasons/>
    <target>
      <device_module device="OutputVariationDevice"/>
    </target>
  </action>

  <action name="BookTravel">
    <parameters>
      <parameter predicate="departure_time" format="value"/>
      <parameter predicate="destination_city" format="value"/>
    </parameters>
    <failure_reasons/>
    <target>
      <device_module device="OutputVariationDevice"/>
    </target>
  </action>

  <action name="TurnOnLights">
    <parameters/>
    <failure_reasons/>
    <target>
      <device_module device="OutputVariationDevice"/>
    </target>
  </action>

  <action name="PlayRadio">
    <parameters>
      <parameter predicate="channel_to_play" format="value" optional="true"/>
      <parameter predicate="category_to_play" format="value" optional="true"/>
    </parameters>
    <failure_reasons/>
    <target>
      <device_module device="OutputVariationDevice"/>
    </target>
  </action>

  <validator name="TravelValidity">
    <parameters>
      <parameter predicate="departure_time" format="value" optional="true"/>
      <parameter predicate="destination_city" format="value" optional="true"/>
    </parameters>
    <target>
      <device_module device="OutputVariationDevice"/>
    </target>
  </validator>

  <validator name="ContactValidity">
    <parameters>
      <parameter predicate="contact_to_call" format="value" optional="false"/>
    </parameters>
    <target>
      <device_module device="OutputVariationDevice"/>
    </target>
  </validator>

  <validator name="ContactAndNumberTypeValidity">
    <parameters>
      <parameter predicate="contact_to_call" format="value" optional="false"/>
      <parameter predicate="number_type_to_call" format="value" optional="false"/>
    </parameters>
    <target>
      <device_module device="OutputVariationDevice"/>
    </target>
  </validator>

  <query name="queried_contact">
    <parameters>
      <parameter predicate="queried_contact_firstname" format="value" optional="true"/>
      <parameter predicate="queried_contact_lastname" format="value" optional="true"/>
    </parameters>
    <target>
      <device_module device="OutputVariationDevice"/>
    </target>
  </query>

  <query name="queried_phonenumber">
    <parameters>
      <parameter predicate="queried_contact" format="value" optional="false"/>
    </parameters>
    <target>
      <device_module device="OutputVariationDevice"/>
    </target>
  </query>
</service_interface>
