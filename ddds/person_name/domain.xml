<?xml version="1.0" encoding="utf-8"?>
<domain name="PersonNameDomain">
  <goal type="perform" action="top">
    <plan>
      <forget_all/>
      <findout type="goal"/>
    </plan>
  </goal>

  <goal type="perform" action="call">
    <plan>
      <findout type="wh_question" predicate="name_of_contact_to_call"/>
      <invoke_service_action name="Call" postconfirm="true"/>
    </plan>
  </goal>

  <goal type="perform" action="create_report">
    <plan>
      <invoke_service_query type="wh_question" predicate="name_of_person_in_report"/>
      <invoke_service_action name="CreateReport" postconfirm="true"/>
    </plan>
  </goal>

  <goal type="perform" action="send_invitation">
    <plan>
      <invoke_service_query type="wh_question" predicate="name_of_person_to_invite"/>
      <invoke_service_action name="SendInvitation" postconfirm="true"/>
    </plan>
  </goal>
</domain>
