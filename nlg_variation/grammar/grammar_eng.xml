<?xml version="1.0" encoding="utf-8"?>
<grammar>
  <action name="top">top</action>
  <action name="up">up</action>

  <action name="book_travel">book a travel</action>
  <individual name="gothenburg">gothenburg</individual>
  <individual name="paris">paris</individual>
  <individual name="tomorrow">tomorrow</individual>
  <individual name="today">today</individual>
  <question speaker="system" predicate="departure_time" type="wh_question">when</question>
  <question speaker="system" predicate="destination_city" type="wh_question">to where</question>
  <validity name="TravelValidity">
    <one-of>
      <item>I cannot find any travels <slot predicate="departure_time"/>.</item>
      <item>I cannot find any travels to <slot predicate="destination_city"/>.</item>
    </one-of>
  </validity>
  <report action="BookTravel" status="ended">Booking your travel to <slot predicate="destination_city"/>.</report>

  <action name="call">call</action>
  <individual name="home">home</individual>
  <individual name="mobile">mobile</individual>
  <individual name="john">john</individual>
  <individual name="bart">bart</individual>
  <question speaker="system" predicate="contact_to_call" type="wh_question">who</question>
  <question speaker="system" predicate="number_type_to_call" type="wh_question">on what number</question>
  <validity name="ContactValidity">There is no such contact.</validity>
  <validity name="ContactAndNumberTypeValidity">There is no <slot predicate="number_type_to_call"/> number registered for <slot predicate="contact_to_call" type="individual"/>.</validity>
  <report action="Call" status="ended">Calling the <slot predicate="number_type_to_call"/> number of <slot predicate="contact_to_call"/>.</report>
</grammar>
