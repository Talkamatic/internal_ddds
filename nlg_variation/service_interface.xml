<?xml version="1.0" encoding="utf-8"?>
<service_interface>
  <action name="Call">
    <parameters>
      <parameter predicate="contact_to_call" format="value"/>
      <parameter predicate="number_type_to_call" format="value"/>
    </parameters>
    <failure_reasons/>
    <target>
      <device_module device="NlgVariationDevice"/>
    </target>
  </action>

  <action name="BookTravel">
    <parameters>
      <parameter predicate="departure_time" format="value"/>
      <parameter predicate="destination_city" format="value"/>
    </parameters>
    <failure_reasons/>
    <target>
      <device_module device="NlgVariationDevice"/>
    </target>
  </action>

  <validator name="TravelValidity">
    <parameters>
      <parameter predicate="departure_time" format="value" optional="true"/>
      <parameter predicate="destination_city" format="value" optional="true"/>
    </parameters>
    <target>
      <device_module device="NlgVariationDevice"/>
    </target>
  </validator>

  <validator name="ContactValidity">
    <parameters>
      <parameter predicate="contact_to_call" format="value" optional="false"/>
    </parameters>
    <target>
      <device_module device="NlgVariationDevice"/>
    </target>
  </validator>

  <validator name="ContactAndNumberTypeValidity">
    <parameters>
      <parameter predicate="contact_to_call" format="value" optional="false"/>
      <parameter predicate="number_type_to_call" format="value" optional="false"/>
    </parameters>
    <target>
      <device_module device="NlgVariationDevice"/>
    </target>
  </validator>
</service_interface>
