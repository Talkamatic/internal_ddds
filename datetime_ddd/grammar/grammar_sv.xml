<?xml version="1.0" encoding="utf-8"?>
<grammar>

  <action name="top">flygbokning</action>
  <action name="up">tillbaka</action>
  <action name="share_event_time">dela evenemangets tid</action>

  <action name="book_flight">
    <one-of>
      <item>
        <vp>
          <infinitive>boka</infinitive>
          <imperative>boka</imperative>
          <ing-form>bokar</ing-form>
          <object>ett flyg</object>
        </vp>
      </item>
      <item>
          Jag vill boka ett flyg med avresa <slot sort="datetime"/>
      </item>
    </one-of>
  </action>

  <report action="ShareEventTime" status="ended">delar att evenemangets tid är <slot predicate="event_time"/>.</report>

  <question speaker="system" predicate="departure_time" type="wh_question">
    när vill du avresa
  </question>

  <question speaker="system" predicate="return_time" type="wh_question">
    när vill du resa tillbaka
  </question>

  <answer speaker="user">jag vill avresa <slot sort="datetime"/></answer>

  <report action="BookFlight" status="ended">
    Okej, jag har bokat ett flyg med avresa <slot predicate="departure_time"/>.
  </report>

  <question speaker="user" predicate="next_arrival_time" type="wh_question">
    när ankommer nästa flyg
  </question>
  <question speaker="all" predicate="next_arrival_time" type="wh_question">nästa ankomst</question>
  <answer speaker="system">Nästa flyg ankommer <slot predicate="next_arrival_time" type="individual"/></answer>
</grammar>
