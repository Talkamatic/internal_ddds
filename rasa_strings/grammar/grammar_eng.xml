<?xml version="1.0" encoding="utf-8"?>
<grammar>
  <action name="top">top</action>
  <action name="up">go back</action>

  <action name="share_media">
    <one-of>
      <item>
        <vp>
          <infinitive>share</infinitive>
          <imperative>share</imperative>
          <ing-form>sharing</ing-form>
          <object>on facebook</object>
        </vp>
      </item>
      <item>share on facebook</item>
      <item>share on facebook that <slot sort="string"/></item>
      <item>share that <slot predicate="comment"/> on facebook</item>
    </one-of>
  </action>

  <question speaker="system" predicate="comment" type="wh_question">
    what comment would you like to share
  </question>

  <answer speaker="user">
    <one-of>
      <item>the comment is <slot predicate="comment"/></item>
    </one-of>
  </answer>

  <report action="ShareMedia" status="ended">
    Created post on Facebook with the comment, <slot predicate="comment"/>.
  </report>

  <string predicate="comment">
    <one-of>
      <item>splendid movie</item>
      <item>i love the movie</item>
    </one-of>
  </string>
</grammar>
