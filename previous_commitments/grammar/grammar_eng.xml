<?xml version="1.0" encoding="utf-8"?>
<grammar>

  <action name="top">mortgage calculator</action>
  <action name="up">back</action>


  <question predicate="monthly_payment">
    the monthly payment for a mortgage
  </question>
  <question predicate="monthly_payment" speaker="user">
    <one-of>
      <item>what is the montly payment for a mortgage</item>
      <item>
        what is the monthly payment if the mortgage sum is <slot
        predicate="mortgage_sum"/> grand
      </item>
    </one-of>
  </question>

  <question type="wh_question" predicate="mortgage_time" speaker="system">
    how long is the mortgage time
  </question>

  <question type="wh_question" predicate="mortgage_sum" speaker="system">
    what is the mortgate sum
  </question>

  <question type="wh_question" predicate="interest_rate" speaker="system">
    what is the interest rate
  </question>

  <answer speaker="user">
    <one-of>
      <item><slot predicate="mortgage_time"/> years</item>
      <item><slot predicate="mortgage_sum"/> grand</item>
      <item><slot predicate="interest_rate"/> percent</item>
    </one-of>
  </answer>

  <answer speaker="system" predicate="monthly_payment">
    the monthly payment is USD <slot predicate="monthly_payment"/>
  </answer>

</grammar>
