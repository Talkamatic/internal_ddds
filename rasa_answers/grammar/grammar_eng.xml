<?xml version="1.0" encoding="utf-8"?>
<grammar>
  <action name="top">top</action>
  <action name="up">go back</action>

  <action name="navigate">
    <one-of>
      <item>
        <vp>
          <infinitive>navigate</infinitive>
          <imperative>navigate</imperative>
          <ing-form>navigating</ing-form>
          <object>somewhere</object>
        </vp>
      </item>
      <item>navigate</item>
      <item>go there</item>
      <item>show me how to navigate</item>
      <item>show me the way</item>
      <item>tell me how to navigate</item>
      <item>start navigation</item>
      <item>can you start navigation</item>
      <item>how do i get there</item>
      <item>how do i navigate there</item>
      <item>how do i drive to get there</item>
      <item>show how to get there</item>
      <item>navigate from <slot predicate="origin"/></item>
      <item>navigate to <slot predicate="destination"/></item>
      <item>navigate from <slot predicate="origin"/> to <slot predicate="destination"/></item>
      <item>navigate to <slot predicate="destination"/> from <slot predicate="origin"/></item>
    </one-of>
  </action>

  <answer speaker="user">
    <one-of>
      <item>from <slot predicate="origin"/></item>
      <item>to <slot predicate="destination"/></item>
      <item>from <slot predicate="origin"/> to <slot predicate="destination"/></item>
      <item>it is from <slot predicate="origin"/> to <slot predicate="destination"/></item>
      <item>to <slot predicate="destination"/> from <slot predicate="origin"/></item>
      <item>it is to <slot predicate="destination"/> from <slot predicate="origin"/></item>
      <item>it is <slot sort="location"/></item>
    </one-of>
  </answer>

  <question speaker="all" predicate="origin" type="wh_question">
    what's the origin
  </question>

  <question speaker="all" predicate="destination" type="wh_question">
    what's the destination
  </question>

  <report action="Navigate" status="ended">
    Started navigation from <slot predicate="origin"/> to <slot predicate="destination"/>.
  </report>

  <individual name="paris">Paris</individual>
  <individual name="london">London</individual>
  <individual name="berlin">Berlin</individual>
  <individual name="gothenburg">
    <one-of>
      <item>Gothenburg</item>
      <item>GÃ¶teborg</item>
    </one-of>
</individual>
</grammar>
