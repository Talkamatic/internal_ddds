<?xml version="1.0" encoding="utf-8"?>
<grammar>
  <action name="call">
    <verb-phrase>
      <verb ref="call"/>
    </verb-phrase>
  </action>

  <action name="delete_number">
    <verb-phrase>
      <verb ref="delete"/>
    </verb-phrase>
  </action>

  <request action="call">
    <utterance>
      <one-of>
        <item>make a call</item>
        <item>call <individual sort="contact"/></item>
        <item>call <individual sort="first_name"/> <individual sort="last_name"/></item>
        <item>call <individual sort="first_name"/></item>
        <item>call <individual sort="last_name"/></item>
      </one-of>
    </utterance>
  </request>

  <report action="Call" status="ended">
    <utterance>calling <individual predicate="selected_contact"/></utterance>
  </report>

  <request action="delete_number">
    <utterance>
      <one-of>
        <item>delete a number</item>
        <item>delete <individual sort="contact"/>'s number</item>
        <item>delete <individual sort="first_name"/>'s number</item>
        <item>delete <individual sort="last_name"/>'s number</item>
      </one-of>
    </utterance>
  </request>

  <report action="Call" status="ended">
    <utterance>calling <individual predicate="selected_contact"/></utterance>
  </report>

  <report action="DeleteNumber" status="ended">
    <utterance>deleting <individual predicate="selected_contact"/>'s number</utterance>
  </report>

  <question speaker="system" predicate="selected_contact" type="wh_question">
    <utterance>which contact</utterance>
  </question>

  <question speaker="system" predicate="selected_first_name" type="wh_question">
    <utterance>what is the first name</utterance>
  </question>

  <question speaker="system" predicate="selected_last_name" type="wh_question">
    <utterance>what is the last name</utterance>
  </question>

  <question speaker="system" predicate="selected_number" type="wh_question">
    <utterance>what number</utterance>
  </question>

  <lexicon>
    <verb id="call">
      <infinitive>call</infinitive>
    </verb>
    <verb id="delete">
      <infinitive>delete</infinitive>
    </verb>
  </lexicon>
</grammar>
