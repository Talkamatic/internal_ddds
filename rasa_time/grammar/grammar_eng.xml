<?xml version="1.0" encoding="utf-8"?>
<grammar>

  <action name="top">flight booking</action>
  <action name="up">go back</action>

  <action name="book_flight">
    <one-of>
      <item>
        <vp>
          <infinitive>book</infinitive>
          <imperative>book</imperative>
          <ing-form>booking</ing-form>
          <object>a flight</object>
        </vp>
      </item>
      <item>
        I want to book a flight departing <slot sort="datetime"/>
      </item>
    </one-of>
  </action>

  <question speaker="system" predicate="departure_time" type="wh_question">
    when do you want to leave
  </question>

  <question speaker="system" predicate="return_time" type="wh_question">
    when do you want to return
  </question>

  <answer speaker="user">I want to leave on <slot sort="datetime"/></answer>

  <report action="BookFlight" status="ended">
    OK, I've booked a flight departing at <slot predicate="departure_time"/>.
  </report>

  <question speaker="user" predicate="next_arrival_time" type="wh_question">
    when does the next flight arrive
  </question>
  <question speaker="all" predicate="next_arrival_time" type="wh_question">flight arrival</question>
  <answer speaker="system">The next flight arrives at <slot predicate="next_arrival_time" type="individual"/></answer>
</grammar>
