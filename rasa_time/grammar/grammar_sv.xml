<?xml version="1.0" encoding="utf-8"?>
<grammar>

  <action name="top">flygbokning</action>
  <action name="up">tillbaka</action>

  <action name="book_flight">
    <one-of>
      <item>
        <vp>
          <infinitive>boka</infinitive>
          <imperative>boka</imperative>
          <ing-form>bokar</ing-form>
          <object>ett flyg</object>
        </vp>
      </item>
      <item>
          Jag vill boka ett flyg med avresa <slot predicate="departure_time"/>
      </item>
      <item>
          Jag vill boka ett flyg med avresa <slot predicate="departure_time"/> och återresa <slot predicate="return_time"/>
      </item>
      <item>
          Jag vill boka ett flyg med återresa <slot predicate="return_time"/> och avresa <slot predicate="departure_time"/>
      </item>
    </one-of>
  </action>

  <question speaker="system" predicate="departure_time" type="wh_question">
    när vill du avresa
  </question>

  <question speaker="system" predicate="return_time" type="wh_question">
    när vill du resa tillbaka
  </question>

  <answer speaker="user">jag vill avresa <slot predicate="departure_time"/></answer>

  <report action="BookFlight" status="ended">
    Okej, jag har bokat ett flyg med avresa <slot predicate="departure_time"/> och återresa <slot predicate="return_time"/>.
  </report>
</grammar>
