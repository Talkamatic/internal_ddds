<?xml version="1.0" encoding="utf-8"?>
<grammar>

    <action name="top">top</action>
    <action name="up">restart</action>

    <question speaker="system" predicate="Date" type="wh_question">
      for which date
    </question>
    <question speaker="system" predicate="selected_city" type="wh_question">
      which city would you like tide information for
    </question>

    <action name="OneshotTideIntent">
        <one-of>
            <item>
                <vp>
                    <infinitive>have</infinitive>
                    <imperative>have</imperative>
                    <ing-form>having</ing-form>
                    <object>tide information</object>
                </vp>
            </item>
            <item>
                alexa ask tide pooler when is the high tide in <slot predicate="selected_city"/> on <slot predicate="Date"/>
            </item>
        </one-of>
    </action>

    <report action="OneshotTideIntent" status="ended">
        <slot type="individual" predicate="readable_selected_date"/> in <slot type="individual" predicate="selected_city"/> the first high tide will be around <slot type="individual" predicate="time_of_first_high_tide"/>, and will peak at about <slot type="individual" predicate="height_of_first_high_tide"/>.
    </report>


    <action name="SupportedCitiesIntent">
        <one-of>
            <item>
                <np>
                    <indefinite>supported cities</indefinite>
                </np>
            </item>
            <item>what cities</item>
            <item>what cities are supported</item>
            <item>which cities</item>
            <item>which cities are supported</item>
            <item>which cities do you know</item>
        </one-of>
    </action>

    <report action="SupportedCitiesIntent" status="ended">
        currently, I know tide information for these coastal cities: <slot type="individual" predicate="supported_cities"/>
    </report>


    <individual name="seattle">Seattle</individual>
    <individual name="los_angeles">Los Angeles</individual>
    <individual name="monterey">Monterey</individual>
    <individual name="san_diego">San Diego</individual>
    <individual name="san_francisco">San Francisco</individual>
    <individual name="boston">Boston</individual>
    <individual name="new_york">New York</individual>
    <individual name="miami">Miami</individual>
    <individual name="wilmington">Wilmington</individual>
    <individual name="tampa">Tampa</individual>
    <individual name="galveston">Galveston</individual>
    <individual name="morehead">Morehead</individual>
    <individual name="new_orleans">New Orleans</individual>
    <individual name="beaufort">Beaufort</individual>
    <individual name="myrtle_beach">Myrtle Beach</individual>
    <individual name="virginia_beach">Virginia Beach</individual>
    <individual name="charleston">Charleston</individual>
    
    <individual name="california">California</individual>
    <individual name="florida">Florida</individual>
    <individual name="louisiana">Louisiana</individual>
    <individual name="massachusetts">Massachusetts</individual>
    <individual name="north_carolina">North Carolina</individual>
    <individual name="south_carolina">South Carolina</individual>
    <individual name="texas">Texas</individual>
    <individual name="virginia">Virginia</individual>
    <individual name="washington">Washington</individual>

</grammar>


